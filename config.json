{
    "camera_topic": "/camera/image_raw",
    "is_compressed": true,
    "frequency": 30,
    
    "recognize": {
        "node": {
            "service_name": "fr_client_goal_server",
            "info_topic": "/recognizer/face_info",
            "view_topic": "/recognizer/processed_img",
            "photo_dir": "data/identities/photos",
            "drawable": ["box", "marks", "name", "bio"],
            "format": "jpg",
            "num_photos": 10,
            "is_relative": true,
            "is_compressed": true,
            "process_interval": 1,
            "worker_type": "command_line"
        },

        "inference": {
            "data": {
                "embed_dir": "data/identities/embeds",
                "model_dir": "data/models/recognizer",
                "embed_name": "newest",
                "model_name": "newest",
                "is_relative": true
            },
            "face_analysis": {
                "model_name": "buffalo_l",
                "model_dir": "data",
                "is_relative": true,
                "ctx_id": 0,
                "det_size": [160, 160]
            },
            "model": {
                "name": "FaceClassifierBasic",
                "device": "cpu",
                "in_shape": 512,
                "num_classes": 40,
                "hidden_shape": [1024, 1024]
            },
            "tunable": {
                "sim_threshold": 0.35,
                "prob_threshold": 0.85,
                "num_to_compare": 5       
            }
        },

        "learn": {
            "data": {
                "photo_dir": "data/identities/photos",
                "embed_dir": "data/identities/embeds",
                "model_dir": "data/models/recognizer",
                "perf_dir": "data/performance",
                "embed_name": "newest",
                "is_relative": true
            },
            "face_analysis": {
                "model_name": "buffalo_l",
                "model_dir": "data",
                "is_relative": true,
                "ctx_id": 0,
                "det_size": [160, 160]
            },
            "specs": {
                "accuracy_name": "total",
                "seed": 42,
                "epochs": 20,
                "k_folds": 3,
                "batch_size": 32,
                "shuffle": true,
                "device": "cpu"
            },
            "params": {
                "model": {
                    "name": "FaceClassifierBasic",
                    "in_shape": 512,
                    "num_classes": 40,
                    "hidden_shape": [1024, 1024]
                },
                "optimizer": {
                    "name": "Adam",
                    "lr": 0.001
                },
                "criterion": {
                    "name": "CrossEntropyLoss"
                }
            }
        }
    }
}